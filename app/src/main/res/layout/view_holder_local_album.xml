<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Widget.DeviceDefault.Button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_s"
    android:layout_marginTop="@dimen/margin_xs"
    android:layout_marginRight="@dimen/margin_s"
    android:layout_marginBottom="@dimen/margin_xs"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cover_view_holder_local_album"
            android:layout_width="@dimen/size_image_view_holder_local_album"
            android:layout_height="@dimen/size_image_view_holder_local_album" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_more_view_holder_local_album"
            android:layout_toRightOf="@id/iv_cover_view_holder_local_album"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_s">

            <TextView
                android:id="@+id/tv_title_view_holder_local_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="初恋"
                android:textColor="@color/text_dark_3"
                android:textSize="@dimen/text_size_title" />

            <TextView
                android:id="@+id/tv_artist_view_holder_local_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingBottom="@dimen/margin_xs"
                android:paddingTop="@dimen/margin_xs"
                android:text="中岛美嘉"
                android:textColor="@color/text_dark_2"
                android:textSize="@dimen/text_size_subhead" />

            <TextView
                android:id="@+id/tv_count_view_holder_local_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="24首"
                android:textColor="@color/text_dark_2"
                android:textSize="@dimen/text_size_caption" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_more_view_holder_local_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/margin_s"
            android:src="@drawable/ic_more_vert_grey600_24dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>