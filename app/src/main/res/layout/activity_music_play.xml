<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    android:fitsSystemWindows="true"
    tools:context="com.scott.su.smusic.ui.activity.MusicPlayActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-25dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_header_drawer" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_music_play"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:theme="@style/AppTheme.AppBarOverlay" />

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:layout_heightPercent="40%"
        app:layout_widthPercent="70%">

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_s"
        app:cardElevation="@dimen/cardview_default_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatSeekBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xs"
                android:layout_marginRight="@dimen/margin_xs"
                android:layout_marginTop="@dimen/margin_xxs"
                android:progress="50" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_xs">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_transparent_half_light"
                    android:padding="@dimen/margin_xs"
                    android:src="@drawable/ic_repeat_black_24dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/fab_play_music_play"
                    android:background="@drawable/selector_transparent_half_light"
                    android:padding="@dimen/margin_xs"
                    android:src="@drawable/ic_skip_previous_black_36dp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_play_music_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margin_xxs"
                    android:src="@drawable/ic_play_arrow_white_24dp"
                    app:backgroundTint="@color/colorPrimary"
                    app:elevation="@dimen/elevation_fab_normal"
                    app:fabSize="normal"
                    app:pressedTranslationZ="@dimen/elevation_fab_pressed" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/fab_play_music_play"
                    android:background="@drawable/selector_transparent_half_light"
                    android:padding="@dimen/margin_xs"
                    android:src="@drawable/ic_skip_next_black_36dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_transparent_half_light"
                    android:padding="@dimen/margin_xs"
                    android:src="@drawable/ic_shuffle_black_24dp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.percent.PercentRelativeLayout>
