<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_number_view_holder_local_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1"
        android:padding="@dimen/margin_s"
        android:textColor="@color/text_dark_2"
        android:textSize="@dimen/text_size_subhead" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_view_holder_local_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="桜色舞"
            android:paddingTop="@dimen/margin_xs"
            android:paddingRight="@dimen/margin_xs"
            android:textColor="@color/text_dark_3"
            android:textSize="@dimen/text_size_subhead" />

        <TextView
            android:id="@+id/tv_artist_view_holder_local_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="中岛美嘉"
            android:textColor="@color/text_dark_2"
            android:textSize="@dimen/text_size_caption"
            android:layout_marginTop="@dimen/margin_xs"
            android:paddingBottom="@dimen/margin_xs"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/text_dark_1"/>
    </LinearLayout>

</LinearLayout>