<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/backgroundContent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_header_drawer" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_item_statistics_drawer_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_s"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_s"
                    android:src="@drawable/ic_poll_grey600_24dp" />

                <TextView
                    style="@style/TextAppearanceMenuSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_xl"
                    android:text="统计" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_item_night_mode_drawer_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_s">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_s"
                    android:src="@drawable/ic_brightness_2_grey600_24dp" />

                <TextView
                    style="@style/TextAppearanceMenuSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_xl"
                    android:text="夜间模式" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/swtich_night_mode_drawer_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_s" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_item_update_drawer_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_s"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_s"
                    android:src="@drawable/ic_extension_grey600_24dp" />

                <TextView
                    style="@style/TextAppearanceMenuSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_xl"
                    android:text="版本更新" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_item_about_drawer_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_s"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_s"
                    android:src="@drawable/ic_help_grey600_24dp" />

                <TextView
                    style="@style/TextAppearanceMenuSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_xl"
                    android:text="关于" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>