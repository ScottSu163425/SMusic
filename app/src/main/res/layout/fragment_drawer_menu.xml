<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundContent"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_header_drawer" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_s">

                <TextView
                    style="@style/TextAppearanceMenuSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_xl"
                    android:text="@string/night_mode" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/swtich_night_mode_drawer_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_s" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/swtich_night_mode_drawer_menu"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_menu_item_drawer_night_mode" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_item_language_drawer_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_s"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_s"
                    android:src="@drawable/ic_menu_item_drawer_language_mode" />

                <TextView
                    style="@style/TextAppearanceMenuSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_xl"
                    android:text="@string/language" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_item_statistics_drawer_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_s"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_s"
                    android:src="@drawable/ic_menu_item_timer_24dp" />

                <TextView
                    style="@style/TextAppearanceMenuSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_xl"
                    android:text="@string/timer" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_item_update_drawer_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_s"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_s"
                    android:src="@drawable/ic_menu_item_drawer_update" />

                <TextView
                    style="@style/TextAppearanceMenuSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_xl"
                    android:text="@string/version_update" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_item_about_drawer_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_s"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_s"
                    android:src="@drawable/ic_menu_item_drawer_about" />

                <TextView
                    style="@style/TextAppearanceMenuSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_xl"
                    android:text="@string/about" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>