<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_s"
    android:layout_marginRight="@dimen/margin_s"
    android:layout_marginTop="@dimen/margin_l"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:stateListAnimator="@drawable/selector_card_elevation_m">

    <FrameLayout
        android:layout_width="230dp"
        android:layout_height="320dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundContent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_cover_view_holder_play_list_second"
                android:layout_width="match_parent"
                android:transitionName="@string/transition_name_cover"
                android:layout_height="250dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_title_view_holder_play_list_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/margin_s"
                        android:paddingRight="@dimen/margin_xs"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_subhead" />

                    <TextView
                        android:id="@+id/tv_artist_view_holder_play_list_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/margin_s"
                        android:paddingRight="@dimen/margin_s"
                        android:paddingTop="@dimen/margin_xxs"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/text_size_body" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/mask_cover_view_holder_play_list_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:visibility="invisible" />
    </FrameLayout>

</android.support.v7.widget.CardView>