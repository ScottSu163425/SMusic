<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_xs"
    android:paddingLeft="@dimen/margin_s"
    android:paddingRight="@dimen/margin_s">

    <TextView
        android:id="@+id/tv_title_fragment_base_list_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_dark_3"
        android:textSize="@dimen/text_size_subhead" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_menu_fragment_base_list_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>